<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lavender"
    tools:context=".AddPlayers">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_centerInParent="true"> <!-- Center the CardView -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/lavender_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTER \n PLAYER NAMES"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/player1"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="40dp"
                    android:padding="8dp"
                    android:textStyle="italic"
                    android:hint="Enter player one"
                    android:textColor="@color/lavender" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/player2"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:textStyle="italic"
                    android:hint="Enter player two"
                    android:textColor="@color/lavender" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/lavender"
                    android:id="@+id/startgamebutton"
                    android:text="Start game"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
